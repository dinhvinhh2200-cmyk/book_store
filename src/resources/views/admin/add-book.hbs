<link rel="stylesheet" href="/css/admin-form.css">

<div class="container">
    <div class="form-admin-container col-md-8 offset-md-2">
        <h2 class="form-title">Thêm Sách Mới</h2>
        
        <form action="/admin/add" method="POST" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label for="title">Tên sách</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Nhập tên sách..." required>
            </div>

            <div class="form-group mb-3">
                <label for="author">Tác giả</label>
                <input type="text" class="form-control" id="author" name="author" placeholder="Nhập tên tác giả..." required>
            </div>

            <div class="form-group mb-3">
                <label for="description">Mô tả nội dung</label>
                <textarea class="form-control" id="description" name="description" rows="5" placeholder="Viết tóm tắt nội dung sách..."></textarea>
            </div>

            <div class="form-group mb-4">
                <label for="image">Ảnh bìa sách</label>
                <input type="file" class="form-control" id="image" name="image" accept="image/*" required>
            </div>

            <div class="d-flex justify-content-between">
                <a href="/admin" class="btn-cancel">Hủy bỏ</a>
                <button type="submit" class="btn-submit">Lưu sách</button>
            </div>
        </form>
    </div>
</div>